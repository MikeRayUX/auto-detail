<div class="w-full h-full py-6">

  <% if @new_setup_link.present?%>

    <h3 class="text-lg font-bold text-center mb-4">
      Please visit this link to complete your direct deposit setup through stripe
    </h3>

    <div class="text-center my-2">
      <%= link_to 'Go To Stripe', @new_setup_link, class: 'text-white px-4 py-2 rounded bg-blue-600 font-bold'%>
    </div>

  <% else %>

    <h3 class="text-lg font-bold text-center">
      This section has already been completed.
    </h3>

  <% end %>
</div>