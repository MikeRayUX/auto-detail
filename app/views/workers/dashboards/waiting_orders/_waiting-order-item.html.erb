<div class="w-full border py-2 px-4 mb-4 bg-white rounded-lg sm:max-w-xl sm:mx-auto">

    <%= link_to  workers_courier_tasks_dropoff_to_partner_step1_path(id: order.id) do %>

    <p class="font-bold text-xl text-left text-gray-900">
      <ion-icon class="text-base" name="qr-code-outline"></ion-icon> 
      <%= order.bags_code %>
    </p>

    <p class="font-bold text-lg text-left text-gray-900">
      <%= order.readable_weight%>
      (<%= order.bags_collected%> BAGS)
    </p>
    
    <div class="mb-4">
      <p class="text-sm">
        Picked up: <%= time_ago_in_words(order.picked_up_from_customer_at) %>
      </p>
    </div>

    <div class="sm:flex sm:flex-row sm:justify-start sm:items-center">
      <p class="text-center my-2 text-sm py-1 px-2 rounded-full bg-blue-500 text-white sm:mr-2">
        <%= order.readable_detergent%>
        X<%= order.required_detergent %> 
      </p>
      <p class="text-center my-2 text-sm py-1 px-2 rounded-full bg-orange-500 text-white">
        <%= order.readable_softener%> 
        X<%= order.required_detergent%>
      </p>
    </div>
  <% end %>
</div>