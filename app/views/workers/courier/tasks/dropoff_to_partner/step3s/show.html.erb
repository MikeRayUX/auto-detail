<% provide(:title, "Dropoff To Washer")%>

<div class="h-screen bg-gray-200">
  <div class="w-full bg-gray-900 py-2">
    <p class="font-bold text-lg text-center text-white">
      Step 3. Dropoff To Washer
    </p>
  </div>

  <div class="w-full">
    <% flash.each do |message_type, message| %>
      <div class="flashWarning sm:max-w-xl sm:mx-auto">
        <h1 class="flashWarningText">
          <%= message %>
        </h1>
      </div>
    <% end %>
  </div>

  <div class="max-w-lg mx-auto p-4 bg-white">
    <%= link_to "<Back", workers_courier_tasks_dropoff_to_partner_step2_path(id: @order.id), class: "text-link-blue font-bold text-xl py-1 font-bold mb-2" %>  

    <div class="my-4">
      <p class="font-bold text-2xl">
        <ion-icon class="text-base" name="qr-code-outline"></ion-icon> <%= @order.bags_code %>
      </p>
    </div>

    <div class="my-4">
      <p class="text-lg">
        Reference Weight: 
        <span class="font-bold">
          <%= @order.readable_weight %>
        </span>
      </p>
    </div>

    <div class="my-8">
      <div class="my-4">
        <p class="flex flex-row justify-start items-center mb-2 text-xl font-bold">
          <span class="h-6 w-6 flex items-center justify-center bg-black text-white mr-4">
            1
          </span>
          Enter partner reported weight for this order:
        </p>

        <p>
          Enter only decimals (Example: 12.6)
        </p>
      </div>
    </div>

    <%= form_tag workers_courier_tasks_dropoff_to_partner_step3_path, method: :patch, class: "stop-form" do %>
      <%= hidden_field_tag :id, @order.id %>
      <div class="mb-4">
        <%= label_tag :weight, 'Weight (lbs)', class: ''%>
        <%= text_field_tag :weight, '',class: 'bag-weight__field border rounded py-3 pl-3 w-1/4 text-gray-900 placeholder-gray-600 sm:text-xl sm:py-4' %>
      </div>

      <%= submit_tag "Complete", class: "confirm-button block w-full py-4 text-center bg-orange-500 text-gray-900 font-bold text-lg mb-4", data: {confirm: 'Are you sure the above information in valid?' }%>
    <% end %>
  </div>
</div>