<% provide(:title, "Dropoff To Washer")%>

<div class="h-screen bg-gray-200">

  <div class="w-full bg-gray-900 py-2">
    <p class="font-bold text-lg text-center text-white">
      Step 4. Dropoff To Washer
    </p>
  </div>

  <div class="w-full">
    <% flash.each do |message_type, message| %>
      <div class="flashWarning sm:max-w-xl sm:mx-auto">
        <h1 class="flashWarningText">
          <%= message %>
        </h1>
      </div>
    <% end %>
  </div>

  <div class="max-w-lg mx-auto p-4 bg-white">

  <%= link_to "<Back", workers_courier_tasks_dropoff_to_partner_step3_path(id: @order.id), class: "text-link-blue font-bold text-xl py-1 font-bold mb-2" %> 
  
    <div class="my-8">
      <div class="my-4">
        <p class="flex flex-row justify-start items-center mb-2 text-xl font-bold">
          Where are you dropping off the order?
        </p>
        <p class="flex flex-row justify-start items-center mb-2 text-xl font-bold">
          Dropping off (<%=@order.bags_collected%> bags)
        </p>
      </div>
    </div> 

    <%= form_tag workers_courier_tasks_dropoff_to_partner_step4_path, method: :patch, class: "stop-form" do |f| %>
      <%= hidden_field_tag :id, @order.id %>

      <%= select_tag :partner_location, options_for_select(@options_for_select), class: "w-full py-3 pl-2 border rounded appearance-none text-gray-900 mb-8"%>

      <%= submit_tag "Complete Dropoff", class: "block w-full py-4 text-center bg-orange-500 text-gray-900 font-bold text-lg mb-4", data: { confirm: 'Are you sure you want to continue?' } %>
    <% end %>

  </div>
</div>