<% provide(:title, "Generate Pickup Labels")%>

<div class="h-screen bg-gray-200">
  <div class="w-full bg-gray-900 py-2">
    <p class="font-bold text-lg text-center text-white">
      [Generate Pickup Labels]
    </p>
  </div>

  <div class="w-full">
    <% flash.each do |message_type, message| %>
      <div class="flashWarning sm:max-w-xl sm:mx-auto">
        <h1 class="flashWarningText">
          <%= message %>
        </h1>
      </div>
    <% end %>
  </div>

  <div class="max-w-lg mx-auto p-4 bg-white">
    <%= form_for :label, url: {controller: 'workers/courier/tasks/pickup_from_customer/generate_pickup_labels', action: 'create' }, html: {class: ''} do |f|%>
      <h1 class="text-center text-xl font-bold">
        How Many Bags?
      </h1>
      <h2 class="text-center mb-2">
        (Enter only whole numbers)
      </h2>

      <%= f.hidden_field :id, value: @order.id%>

      <%= f.text_field :bag_count, class: 'block w-16 mx-auto border rounded py-3 text-center text-gray-900 my-6 text-2xl font-bold', type: 'tel'%>

      <%= f.submit "Generate Labels", class: 'block w-full py-4 text-center bg-orange-500 text-gray-900 font-bold text-lg mb-4'%>
    <% end %>
  </div>

</div>