<% provide(:title, "Pickup From Customer")%>
<div class="h-screen bg-gray-200">

  <div class="w-full bg-gray-900 py-2">
    <p class="font-bold text-lg text-center text-white">
      Pickup Step 1. Travel To Customer
    </p>
  </div>

  <div class="w-full">
    <% flash.each do |message_type, message| %>
      <div class="flashWarning sm:max-w-xl sm:mx-auto">
        <h1 class="flashWarningText">
          <%= message %>
        </h1>
      </div>
    <% end %>
  </div>

  <div class="max-w-lg mx-auto p-4 bg-white">
    <%= link_to "<Back", workers_dashboards_open_appointments_path, class: "text-link-blue font-bold text-xl py-1 font-bold mb-2" %>  
    
    <div class="my-4">
      <p class="font-bold text-xl">
        <%= @order.reference_code%>
      </p>
      <p class="text-lg">
        Appt:
        <%= @order.condensed_appointment%>
      </p>
    </div>

    <div class="mt-4 mb-10">
      <p class="text-lg">
        <%= @order.user.full_name.upcase %>
      </p>

      <p class="text-lg">
        <%= link_to @order.full_address.upcase, @order.google_nav_link, target: :_blank, class: 'text-link-blue underline font-bold'%>
      </p>

      <p class="my-4 text-lg">
        <span class="font-bold">
          Instructions: <%=@address.readable_pickup_directions%>
        </span>
      </p>
    </div>
    
    <%= link_to "I've Arrived", workers_courier_tasks_pickup_from_customer_step1_path(id: @order.id), method: :patch, class: "block w-full py-4 text-center text-gray-900 bg-orange-500 font-bold text-lg"%>
  </div>

</div>