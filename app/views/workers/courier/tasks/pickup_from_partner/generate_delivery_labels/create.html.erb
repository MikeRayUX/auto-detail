<% provide(:title, "Generate Delivery Labels")%>

<div class="h-auto bg-gray-200">

	<div class="max-w-lg mx-auto bg-white pt-8">

		<% @codes.each do |code|%>
			<div class="mb-64 mx-auto w-full text-center">
				<h1 class="font-bold text-lg mx-w-xs">
					<%=@user.formatted_name.upcase%>
				</h1>
				<h1 class="font-bold text-lg text-center mx-auto" style="max-width: 250px;">
					<%=@order.full_address.upcase%>
				</h1>

				<h1 class="font-bold text-2xl tracking-widest">
					<%= code[:code]%> (<%=code[:of_count]%>)
				</h1>

				<h1 class="text-center mb-1">
						<%= code[:svg_large].html_safe %>
				</h1>

				<h1 class="font-bold text-base tracking-wider">
					FRESHANDTUMBLE.COM
				</h1> 
			</div>
		<% end %>

		<%= link_to 'DONE PRINTING LABELS', workers_courier_tasks_pickup_from_partner_step2_path(id: @order.id), class: 'block w-full py-4 text-center bg-yellow-500 text-gray-900 font-bold text-lg mb-4'%>
	</div>
</div>

<script>
	// center the generated svg qr code element
	document.querySelectorAll('svg').forEach((svg) => {
		svg.setAttribute('style', 'margin: 0 auto 0 auto;')
	})
</script>