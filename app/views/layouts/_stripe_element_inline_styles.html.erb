<style>
  .StripeElement {
  box-sizing: border-box;
  /* height: 50px; */
  padding: 15px 12px;
  border: solid 1px #adadad;
  border-radius: 1px;
  background-color: white;
  font-size: 160px;
}

.StripeElement--focus {
  box-shadow: 0 1px 3px 0 #cfd7df;
}

