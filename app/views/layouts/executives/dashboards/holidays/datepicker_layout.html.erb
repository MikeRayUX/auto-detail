<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= yield(:title) %> | Fresh & Tumble</title>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <%= render 'layouts/rails_default_head' %>
    <%= render 'layouts/font_import_links' %>
    <%= stylesheet_link_tag "application", media: 'all' %> 
    <%= stylesheet_link_tag "datepicker_manifest", media: 'all'%>
    <%= stylesheet_pack_tag 'application' %>

    <script type="module" src="https://unpkg.com/ionicons@5.0.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule="" src="https://unpkg.com/ionicons@5.0.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css">
  </head>

  <body>
    <div class="flex flex-row justify-start items-start">
      <%= render partial: 'executives/dashboards/sidebar'%>
    
      <div class="w-full flex-column items-center justify-center">
        <%= render partial: 'executives/dashboards/top_nav'%>
        <%# page body %>
        <div class="min-h-screen p-6 bg-gray-500">
          <div class="max-w-full mx-auto">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <%= javascript_pack_tag 'application' %>
    <%= javascript_pack_tag 'flash_dismiss'%>
  </body>
</html>