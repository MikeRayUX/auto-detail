
<div style="height: 550px;" class="w-full mx-auto lg:mx-0 lg:max-w-sm rounded bg-white lg:mr-4 overflow-y-scroll">
  <div class="w-full p-2">
    <h3 class="font-black text-xs text-left flex flex-row justify-center items-center pt-1">
      <p class="mr-2  bg-primary" style="height: 10px; width: 10px;"></p>  
        ACTIVATION
    </h3>
  </div>

  <div  class="px-4 mb-2 lg:mb-0 overflow-y-scroll">

    <div class="mb-2 border-b pb-2">
      <h3 class="font-black text-xs text-left mb-1">
        ACTIVATION TRACKER
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        APPLICATION: <%= @w.application_completed? ? '✔' : '❌'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        INVITED: <%= @w.invited_to_app? ? '✔' : '❌'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        INTRODUCTION: <%= @w.completed_app_intro_at? ? '✔' : '❌'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        TERMS OF SERVICE: <%= @w.tos_accepted_at? ? '✔' : '❌'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        BACKGROUND CHECK SUBMITTED: <%= @w.background_check_submitted? ? '✔' : '❌'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        INSURANCE AGREEMENT: <%= @w.insurance_agreement_accepted_at? ? '✔' : '❌'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        TAX AGREEMENT: <%= @w.tax_agreement_accepted_at? ? '✔' : '❌'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        DIRECT DEPOSIT: <%= @w.valid_stripe_connect_acount? ? '✔' : '❌'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        BACKGROUND CHECK APPROVED: <%= @w.background_check_approved_at? ? '✔' : '❌'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        ACTIVATED: <%= @w.activated? ? '✔' : '❌'%>
      </h3>
    </div>

    <div class="mb-2 border-b pb-2">
      <h3 class="text-xs font-black mb-1">
        Step 1. APPLICATION ANSWERS 
        <%= link_to 'Send App Invite', executives_dashboards_washers_invitations_path(id: @w.id), method: :put, class: 'px-2 rounded bg-green-600 text-white font-bold text-xs', data: {confirm: 'Are you sure?'} %>
      </h3>

      <h3 class="text-xs font-black leading-tight ">
        IS ELIGIBLE?: <%= @w.application_eligible? ? "YES" : "NO" %>
      </h3>

       <h3 class="text-xs font-bold leading-tight">
        APP INVITATION SENT AT: <%= @w.app_invitation_sent_at ? readable_date(@w.app_invitation_sent_at) : "NEVER"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        LIVES WITHIN REGION: <%= @w.live_within_region ? "YES" : "NO"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        21 OR OLDER: <%= @w.min_age ? "YES" : "NO"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        LEGAL TO WORK: <%= @w.legal_to_work ? "YES" : "NO"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        HAS EQUIPMENT: <%= @w.has_equipment ? "YES" : "NO"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        VALID DRIVERS LICENSE: <%= @w.valid_drivers_license ? "YES" : "NO"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        HAS CAR INSURANCE: <%= @w.valid_car_insurance_coverage ? "YES" : "NO"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        RELIABLE TRANSPORTATION: <%= @w.reliable_transportation ? "YES" : "NO"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        VALID SSN: <%= @w.valid_ssn ? "YES" : "NO"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        WILL SUBMIT TO BACKGROUND CHECK: <%= @w.consent_to_background_check ? "YES" : "NO"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        CAN LIFT 30 LBS?: <%= @w.can_lift_30_lbs ? "YES" : "NO"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        HAS DISABILITY?: <%= @w.has_disability ? "YES" : "NO"%>
      </h3>
    </div>

    <div class="mb-2 border-b pb-2">
      <h3 class="font-black text-xs text-left mb-1">
        Step 2. BACKGROUND CHECK
        <% if @w.background_check_approved_at.present?%>
          <%= link_to 'REVOKE APROVAL', executives_dashboards_washers_background_checks_path(approve: false, email: @w.email), class: ' px-1 rounded text-white font-bold text-xs bg-red-600', method: :patch, data: {confirm: 'Are you sure?'}%>
        <% else %>
          <%= link_to 'APPROVE', executives_dashboards_washers_background_checks_path(approve: true, email: @w.email), class: ' px-1 rounded text-white font-bold text-xs bg-green-600', method: :patch, data: {confirm: 'Are you sure?'}%>
        <% end %>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        BACKGROUND CHECK APPROVED AT: <%= @w.background_check_approved_at ? readable_date(@w.background_check_approved_at).upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        FIRST NAME: <%= @w.first_name ? @w.first_name.upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        MIDDLE NAME: <%= @w.middle_name ? @w.middle_name.upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        LAST NAME: <%= @w.last_name ? @w.last_name.upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        PHONE: <%= @w.phone ? @w.formatted_phone : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        DOB: <%= @w.date_of_birth ? @w.date_of_birth.upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        DLN: <%= @w.drivers_license ? @w.drivers_license.upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        SSN: <%= @w.ssn ? @w.ssn.upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        ELIGIBILITY COMPLETED AT: <%= @w.eligibility_completed_at ? readable_date(@w.eligibility_completed_at).upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        ACTIVATED AT: <%= @w.activated_at ? readable_date(@w.activated_at).upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        COMPLETED APP INTRO: <%= @w.completed_app_intro_at ? readable_date(@w.completed_app_intro_at).upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        TOS ACCEPTED AT: <%= @w.tos_accepted_at ? readable_date(@w.tos_accepted_at).upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        BACKGROUND CHECK SUBMITTED: <%= @w.background_check_submitted_at ? readable_date(@w.background_check_submitted_at).upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        TAX AGREEMENT ACCEPTED AT: <%= @w.tax_agreement_accepted_at ? readable_date(@w.tax_agreement_accepted_at).upcase : 'N/A'%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        INSURANCE AGREEMENT ACCEPTED AT: <%= @w.insurance_agreement_accepted_at ? readable_date(@w.insurance_agreement_accepted_at).upcase : 'N/A'%>
      </h3>
    </div>

    <div class="mb-2 border-b pb-2">
      <h3 class="font-black text-xs text-left mb-1">
        Step 3. ACTIVATION STATUS
        <% if @w.activated?%>
        <%= link_to 'DEACTIVATE', executives_dashboards_washers_deactivations_path(id: @w.id), class: 'ml-2 px-1 rounded text-white font-bold text-xs bg-red-600', method: :patch, data: {confirm: 'Are you sure?'}%>
      <% else %>
        <%= link_to 'ACTIVATE', executives_dashboards_washers_activations_path(id: @w.id), class: 'ml-2 px-1 rounded text-white font-bold text-xs bg-green-600', method: :patch, data: {confirm: 'Are you sure?'}%>
      <% end %>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        STATUS: <%= @w.activation_status.upcase%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        ACTIVATED AT: <%= @w.activated_at ? readable_date(@w.activated_at) : "N/A"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        DEACTIVATED AT: <%= @w.deactivated_at ? readable_date(@w.deactivated_at) : "N/A"%>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        I.C. PAYOUTABLE: <%= @w.payoutable_as_ic.to_s.upcase%>
      </h3>

      <% if @w.activated? %>
        <%= link_to "Resend Activation Email", executives_dashboards_washers_resend_activation_emails_path(id: @w.id), class: 'px-2 rounded-sm bg-green-600 text-white text-xs font-bold mr-2', data: {
        confirm: 'This will send an email in the real world. Continue?'}, method: :put%>
      <% end %>
    </div>

    <div class="mb-2 border-b pb-2">
      <h3 class="font-black text-xs text-left mb-1">
        STRIPE
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        STRIPE STRIPE ACCOUNT ID: 
        <% if @w.stripe_account_id %>
          <%= link_to @w.stripe_account_id, "https://dashboard.stripe.com/connect/accounts/#{@w.stripe_account_id}", class: 'w-3/12 text-xs font-black text-link-blue underline'%>
        <% else %>
          N/A
        <% end %>
      </h3>

      <h3 class="text-xs font-bold leading-tight">
        STRIPE ACCOUNT STATUS: <%= @w.stripe_account_status[:status].upcase%>
      </h3>
    </div>
  </div>  
</div>