<% flash.each do |message_type, message| %>
    <div class="w-full py-2 px-4 rounded bg-gray-200 mb-6">
      <h1 class="text-base text-center text-gray-900 font-normal">
        <%= message%>
      </h1>
    </div>
  <% end %>

<div class="w-1/3">
  <%= link_to '< Back', executives_dashboards_emails_path, class: 'text-sm font-bold underline text-indigo-700 ml-4'%>
</div> 

<div class="bg-white p-6 rounded w-full max-w-2xl mb-4 mx-auto">
  <h3 class="font-bold text-lg mb-4 text-center">
    Add An Email Template from SendGrid
  </h3>
  <%= form_for :sendgrid_email, url: {controller: 'executives/dashboards/emails', action: 'create'} do |f|%>
    <div class="w-full px-4 mx-auto">
        <div class="w-full mb-2">
          <%= f.label :description, class: 'font-bold text-xs mb-1'%>
          <%= f.text_field :description, placeholder: 'Title/Description', class: 'pl-2 text-sm h-12 rounded-sm border bg-white text-gray-900 w-full' %>
        </div>

        <div class="w-full mb-2">
          <%= f.label :template_id, class: 'font-bold text-xs mb-1'%>
          <%= f.text_field :template_id, placeholder: 'Sendgrid Template Id', class: 'pl-2 text-sm h-12 rounded-sm border bg-white text-gray-900 w-full' %>
        </div>

        <div class="w-full mb-2">
          <%= f.label :preview_url, class: 'font-bold text-xs mb-1'%>
          <%= f.text_field :preview_url, placeholder: 'Sendgrid Preview Url', class: 'pl-2 text-sm h-12 rounded-sm border bg-white text-gray-900 w-full' %>
        </div>

        <div class="w-full mb-2">
          <%= f.label :content_summary, class: 'font-bold text-xs mb-1'%>
          <%= f.text_area :content_summary, placeholder: 'Content Summary', class: 'pl-2 py-2 text-sm h-64 rounded-sm border bg-white text-gray-900 w-full' %>
        </div>

        <div class="w-full mb-2">
          <%= f.label :category, class: 'font-bold text-xs mb-1'%>
          <%= f.select :category, options_for_select(SendgridEmail.categories.each.map{|category| ["#{category[0]}", category[1].to_i]}, ), {}, class: 'pl-2 text-sm h-10 rounded-sm border bg-white text-gray-900 w-full' %>
        </div>

      <div class="flex justify-end items-center">
        <%= f.submit 'Add Sendgrid Template', class: 'cursor-pointer block font-bold mt-4 w-full py-4 px-3 bg-green-600 text-sm text-white rounded'%>
      </div>
      <% end %>
    </div>

</div>