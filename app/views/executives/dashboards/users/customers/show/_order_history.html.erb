<div class="w-full lg:max-w-sm rounded bg-white lg:ml-4 mb-2 lg:mb-0">
  <div class="w-full p-2">
    <h3 class="font-black text-xs text-left flex flex-row justify-center items-center  pt-1">
      <p class="mr-2  bg-gray-500" style="height: 10px; width: 10px;"></p>  
      ORDER HISTORY
    </h3>
  </div>
  <div style="height: 500px;"class="px-2 overflow-y-scroll ">
    <% @orders.each do |o|%>
      <div class="py-2 mb-2 px-4 border rounded border-gray-600">
        <div class="w-full flex flex-row justify-between items-center">
          <h3 class="text-xs font-bold text-center text-gray-900 ">
            <%= link_to o.ref_code, executives_dashboards_new_orders_new_order_path(id: o.ref_code), class: 'text-xs font-black text-link-blue underline'%>
          </h3> 

          <h3 class="text-xs font-black text-left  px-1 ">
            <%= o.status.upcase%>
          </h3>
        </div>

        <h3 class="text-xs font-black text-left ">
          CREATED: <%= readable_date_with_time(o.created_at)%>
        </h3> 

        <h3 class="text-xs font-black text-left ">
          GRANDTOTAL: $<%= NewOrder.readable_decimal(o.grandtotal)%>
        </h3> 

        <h3 class="text-xs font-black text-left ">
          BAGS: <%= o.bag_count%>
        </h3> 

        <h3 class="text-xs font-black text-left ">
          EST PICKUP: <%= readable_date_with_time(o.est_pickup_by)%>
        </h3> 

        <h3 class="text-xs font-black">
          CUSTOMER STATUS: 
          "<%= o.customer_status%>"
        </h3>  

        <h3 class="text-xs font-black">
          WASHER: 
          <% if o.washer %>
            <%= link_to o.washer.abbrev_name.upcase, executives_dashboards_washers_washer_path(id: o.washer.id), class: 'text-xs font-black text-link-blue underline'%>
          <% else %>
            N/A
          <% end %>
        </h3>
      </div>
      <% end %>
    </div>
  </div>