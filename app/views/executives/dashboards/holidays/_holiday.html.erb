<div class="w-full h-full p-2 flex justify-between items-center border-b bg-white"> 

  <div class="w-full h-full flex justify-between items-center ">
    <div class="w-8/12 flex justify-start items-center">
      <h4 class="w-1/3 text-sm mr-12 font-bold text-gray-900">
        <%=truncate_attribute(holiday.title, 25)%>
      </h4>

      <h4 class="text-sm flex justify-start items-center font-bold">
        <%= readable_date(holiday.date)%>
      </h4>
    </div>

    <div class="flex justify-center items-center h-full pl-4 bg-white">
      <%= link_to  executives_dashboards_holiday_path(id: holiday.id), class: 'leading-none underline font-bold text-sm text-gray-700', data: {confirm: 'Are you sure?'}, method: :delete do %>
        delete
      <% end %>
    </div>
  </div>

</div>