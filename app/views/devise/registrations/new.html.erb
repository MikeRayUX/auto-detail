<% provide(:title, "Sign up")%>

  <div class="new-user-registration-container__outer">

    <div class="new-user-registration-container__inner">
    
      <h1>Sign up <span class="highlight-blue">to get started!</span></h1>

      <h4>Email Sign Up</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="sign-up-field">
         <%= f.label :full_name do %>
          <%= f.text_field :full_name, :placeholder => "Full name", value: "John doe", aria-label: 'Full Name' %>
          <%end %>
        </div>

        <div class="sign-up-field">
          <%= f.email_field :email, autocomplete: "email", :placeholder => "Email", value: "johndoe@john.com" %>
        </div>

        <div class="sign-up-field">
          <%= f.text_field :phone, autofocus: true, :placeholder => "Phone number", value: "5555555555" %>
        </div>

        <div class="sign-up-field">
          <% if !@minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", :placeholder => "Password", value: "password" %>
        </div>

        <div class="sign-up-field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "Confirm Password", value: "password" %>
        </div>
        
        <p>By joining, you accept our <a href="#">terms of service</a> and <a href="#">privacy policy</a></p>

        <%= f.submit "Sign up" %>

        <p>Already have an account? <%= link_to "Sign in", new_worker_session_path %></p>
        <% end %>

        <%= render "devise/shared/error_messages", resource: resource %>
        
  </div>
</div>
  
  
  
