<% flash.each do |message_type, message| %>
    <div class="flashReg sm:max-w-screen-sm sm:mx-auto sm:mt-4">
      <h1 class="text-base text-center text-gray-900 font-normal">
        <%= message %>
      </h1>
    </div>
  <% end %>
<div class="block bg-white py-6 px-4 sm:max-w-screen-sm sm:m-auto sm:p-16 sm:px-18 sm:mt-4 sm:rounded-lg sm:shadow">

  <h1 class="font-bold text-lg text-gray-900 text-center mb-8 sm:text-xl">
    How Can We Help?
  </h1>

  <%= form_for :ticket, url: { controller: 'users/dashboards/support_tickets', action: 'create'} do |f| %>

    <div class="mb-2 w-full sm:mb-8">
      <%= f.select :option,  @options_for_select, { prompt: 'Select An Option'}, {class: "w-full py-3 pl-2 border rounded appearance-none text-gray-900 sm:py-4 sm:text-xl sm:pl-3 bg-white" }%>
    </div>

    <%= f.text_area :body, class: 'w-full py-3 h-48 pl-2 border rounded appearance-none text-gray-900 sm:py-4 sm:text-xl sm:pl-3', placeholder: 'Describe your issue'%>

    <div class="my-2 px-2 py-2 rounded bg-gray-200">
      <h2 class="text-gray-900 text-sm text-center sm:text-lg">
        Need help now?
      </h2>
      <h2 class="text-gray-900 text-sm text-center sm:text-lg">
        Call Us: 
        <ion-icon name="call"></ion-icon>
        <%= link_to @business_phone, "tel:#{@business_phone}", style: 'color: blue;', class: 'font-bold'%>
      </h2>

      <h2 class="text-gray-900 text-sm text-center sm:text-lg">
        8AM - 8PM MON-SAT
      </h2>
  </div>

    <%= f.submit 'Send Message', class: 'w-full block py-4 px-4 bg-primary mt-8 text-center text-white font-bold text-lg rounded sm:text-xl'%>
  <% end %>
</div>