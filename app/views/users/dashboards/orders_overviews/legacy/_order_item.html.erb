<%= link_to users_orders_orders_path(reference_code: o.reference_code), class: 'bg-white w-full flex flex-row items-center justify-between border-solid border-gray-100 py-4 px-4 border-b border-solid border-1 border-gray-300 sm:px-8' do %>
  <div class="flex-column">
    <h2 class="font-bold text-lg text-gray-900 py-0 sm:text-lg">
      Placed: <%= o.readable_created_at %>
    </h2>

     <h2 class="font-bold text-sm text-gray-900 sm:text-lg">
      <% if o.billed? %>
        <%= o.readable_grandtotal%> (<%= o.readable_weight %>)
      <% else %>
        Appt: <%= o.condensed_appointment %>
      <% end %>
    </h2>
    
    <h2 class="text-sm text-gray-900 sm:text-lg">
      <%= o.delivery_status %>
    </h2>

    <div class="flex flex-row mt-2">
      <div class="py-1 px-3 bg-blue-500 rounded-full text-white font-bold text-xs mr-2 sm:text-sm">
        <%=o.readable_detergent%>
      </div>

      <div class="py-1 px-3 bg-orange-500 rounded-full text-white font-bold text-xs sm:text-sm">
        <%=o.readable_softener%>
      </div>
    </div>
  </div>

  <div class="">
      <ion-icon class="text-2xl hidden" name="chevron-forward-outline"></ion-icon>
  </div>

<% end %>