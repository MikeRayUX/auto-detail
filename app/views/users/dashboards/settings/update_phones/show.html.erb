<div class="w-full h-screen flex-column justify-center items-center mb-8 sm:py-8 bg-gray-200">
  <div class="w-full mx-auto p-6 sm:max-w-lg">
    <%= form_for :phone, :url => users_dashboards_settings_update_phones_path, method: :put do |f| %>
      <div class="my-2">
        <%= f.label :phone, "Enter Your New Phone Number", class: "block font-bold mb-2 text-lg" %>
        <div class="h-16 w-full border rounded-md appearance-none text-gray-900 flex justify-start items-center">
          <div class="bg-white border-r-2 border-gray-400  top-0 left-0 h-full w-16 flex justify-center items-center rounded-l-md">
             <p class="font-bold text-gray-900">+1</p> 
          </div>
          <%= f.telephone_field :phone, class: "phoneField rounded-r-md block w-full h-full pl-2" %>
        </div>
      </div>

      <div class="my-4">
        <% flash.each do |message_type, message| %>
          <div class="flashWhite bg-white sm:w-full sm:mx-auto">
            <h1 class="flashWhiteText">
              <%= message %>
            </h1>
          </div>
        <% end %>
      </div>
      <%= f.submit "Save", class: "w-full block py-4 px-4 bg-green-500 text-white font-bold text-lg rounded sm:text-xl"%>
   <% end %>
  </div>
</div>

<%= javascript_pack_tag 'utilities/phone_input_mask'%>