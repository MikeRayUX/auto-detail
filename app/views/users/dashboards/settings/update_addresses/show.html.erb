<% provide(:title, "Update My Address")%>
<% flash.each do |message_type, message| %>
  <div class="flashReg sm:max-w-screen-sm sm:mx-auto sm:mt-4">
    <h1 class="text-base text-center text-gray-900 font-normal font-normal">
      <%= message %>
    </h1>
  </div>
<% end %>

<div class="block bg-white py-6 px-4 sm:max-w-screen-sm sm:m-auto sm:p-16 sm:px-20 sm:rounded-lg sm:mt-4 sm:rounded sm:shadow">

  <h1 class="text-gray-900 font-bold text-lg text-center mb-4 sm:text-xl sm:mb-6">
     Update Your Address
  </h1>

  <%= form_for :address, url: { controller: 'users/dashboards/settings/update_addresses', action: 'update'}, method: :patch do |f|%>

    <%= f.hidden_field :street_address %>
    <%= f.hidden_field :city %>
    <%= f.hidden_field :state %>
    <%= f.hidden_field :zipcode %>

    <div class="flex-column items-center justify-center h-10 w-full relative mb-8 sm:mb-10">
      <ion-icon class="text-gray-500 mb-1 text-base absolute top-0 pt-4 pl-2 sm:text-xl sm:pt-5" name="map-outline"></ion-icon>

      <input type="text" placeholder=" Start typing your address" id="autocomplete" class="addressInput w-full py-3 pl-8 border rounded appearance-none placeholder-gray-500 text-gray-900 sm:py-4 sm:text-xl sm:pl-8">
    </div>

   <div class="flex-column justify-start mb-4 w-1/2 sm:mb-6">
     <%= f.label :unit_number, 'Unit # (Optional)', class: 'block text-gray-900 text-sm mb-1 sm:text-xl'%>
    <%= f.text_field :unit_number, class: 'addressInput w-full py-3 pl-6 border rounded appearance-none placeholder-black text-gray-900 sm:py-4 sm:text-xl sm:pl-3'%>
   </div>

   <div class="mb-4 w-full sm:mb-6">
     <%= f.label :pick_up_directions, 'Pickup Instructions (Optional)', class: 'block text-gray-900 text-sm mb-1 sm:text-xl'%>
      <%= f.text_field :pick_up_directions, class: 'w-full py-3 pl-6 border rounded appearance-none placeholder-black text-gray-900 sm:py-4 sm:text-xl sm:pl-3' %>
   </div>

    <%= f.submit 'Save', class: 'w-full block py-4 px-4 bg-primary mt-8 text-white text-center font-bold text-lg rounded sm:text-xl'%>
  <% end %>
</div>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%=GOOGLE_API_KEY%>&libraries=places"></script>
<%= javascript_pack_tag 'users/resolve_setups/places'%>