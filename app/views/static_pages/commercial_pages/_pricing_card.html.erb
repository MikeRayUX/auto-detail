<%# pricing section start %>
<div class="px-6 flex-column justify-center items-center max-w-lg m-auto">
  <div class="mb-12 w-full">
    <h4 class="text-center text-gray-900 font-bold text-2xl tracking-wide leading-tight  sm:text-3xl sm:leading-snug sm:text-center">
      No Contracts.
    </h4>
    <h4 class="text-center text-gray-900 font-bold text-2xl tracking-wide leading-tight sm:text-3xl sm:leading-snug sm:text-center">
      No Minimums.
    </h4>
    <h4 class="text-center text-gray-900 font-bold text-2xl tracking-wide leading-tight sm:text-3xl sm:leading-snug sm:text-center">
      No Surprises.
    </h4>
  </div>

  <%# pricing card start %>
  <div class="mx-auto w-full max-w-xs flex-column items-center justify-center px-2 py-8 border rounded-lg shadow-md sm:px-4">
    <h3 class="font-bold text-primary text-center text-xl sm:text-2xl mb-8 leading-tight tracking-tigher">
      LAUNDRY SERVICE
    </h3>
    
    <div class="my-4 px-2">
      <p class="text-gray-900 my-4 text-lg justify-start text-center sm:text-xl">
        <ion-icon class="text-primary text-lg mr-1" name="checkmark-circle"></ion-icon>
        Billed Weekly
      </p>

      <p class="text-gray-900 my-4 text-lg justify-start text-center sm:text-xl">
        <ion-icon class="text-primary text-lg mr-1" name="checkmark-circle"></ion-icon>
        Free Pickup & Delivery
      </p>

      <p class="text-gray-900 my-4 text-lg justify-start text-center sm:text-xl">
        <ion-icon class="text-primary text-lg mr-1" name="checkmark-circle"></ion-icon>
        Next Day Turnaround
      </p>

      <p class="text-gray-900 my-4 text-lg justify-start text-center sm:text-xl">
        <ion-icon class="text-primary text-lg mr-1" name="checkmark-circle"></ion-icon>
        No Minimums
      </p>
    </div>

    <div class="flex flex-row justify-center my-2">
      <h5 class="text-primary text-xl">$</h5>
      <h5 class="text-5xl font-bold text-primary mr-2">
        1.99
      </h5>
      <h5 class="mt-8 text-gray-900 font-normal text-lg">
        /POUND
      </h5>
    </div>

  </div>
  <%# pricing card end %>
  <div class="mx-auto mt-4 max-w-xs">
    <%= link_to "Call #{@contact_phone}", "tel:#{@contact_phone}", class: 'block py-2 px-4 rounded-full text-white bg-primary font-bold text-center text-xl' %>
  </div>

  <div class="mt-6">
    <h4 class="text-gray-900 text-lg text-center  leading-tight font-medium lg:text-center">
     Looking for our On-Demand Laundry Service?
     <br>
     <%= link_to 'Click Here', root_path, class: 'underline text-primary font-bold'%>
    </h4>
  </div>
</div>

<%# pricing section end %>